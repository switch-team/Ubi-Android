<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateFragment">
    <ImageView
        android:id="@+id/icImg"
        app:layout_constraintTop_toTopOf="100dp"
        app:layout_constraintStart_toStartOf="100dp"
        android:src="@drawable/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시물작성하기"/>


    <EditText
        android:padding="10dp"
        android:drawableStart="@drawable/ic_account_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="제목을 입력하세요"
        android:background="@drawable/check"

        android:id="@+id/tilteEdit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
<!--    <ImageView-->
<!--        android:id="@+id/imgView"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
<!--        app:layout_constraintTop_toBottomOf="@id/tilteEdit"-->
<!--        app:layout_constraintStart_toStartOf="@id/tilteEdit"-->
<!--        app:layout_constraintEnd_toEndOf="@id/tilteEdit"-->
<!--        app:layout_constraintBottom_toTopOf="@id/contentEdit"-->
<!--        />-->
    <EditText
        android:layout_marginTop="40dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="내용"
        android:id="@+id/contentEdit"
        android:inputType=""
        android:background="@drawable/check"
        app:layout_constraintTop_toBottomOf="@id/tilteEdit"
        app:layout_constraintEnd_toEndOf="@id/tilteEdit"
        app:layout_constraintStart_toStartOf="@id/tilteEdit"
        app:layout_constraintBottom_toTopOf="@id/submitButton"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contentEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="60dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>