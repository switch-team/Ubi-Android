<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.WelcomeFragment">

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/logo_ubiigm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/symbolTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="너와 나를 잇는 SNS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImg" />

    <TextView
        android:id="@+id/UbiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ubi "
        android:textSize="30dp"
        android:textColor="@color/Ubi"
        android:fontFamily="@font/pretendardbold"
        app:layout_constraintEnd_toStartOf="@+id/Ubi2Text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/symbolTxt" />

    <TextView
        android:id="@+id/Ubi2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="에 오신것을"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendardmedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/UbiText"
        app:layout_constraintTop_toBottomOf="@+id/symbolTxt" />
    <TextView
        android:id="@+id/Ubi3Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환영합니다!"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendardmedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UbiText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbtn"
        android:fontFamily="@font/pretendardmedium"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintWidth="285dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardmedium"
        android:layout_marginTop="16dp"
        android:background="@drawable/registerbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginBtn"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth="285dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>