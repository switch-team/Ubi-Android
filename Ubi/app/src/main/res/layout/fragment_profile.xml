<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.profile.ProfileFragment">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="50dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="180dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="180dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/user_background"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toTopOf="@id/topGuideline">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/followTopGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="270dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/followBottomGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="100dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cardStartGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="40dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cardEndGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="40dp" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/genderText"
            app:layout_constraintEnd_toEndOf="@id/cardEndGuideline"
            app:layout_constraintStart_toStartOf="@id/cardStartGuideline" />

        <TextView
            android:id="@+id/genderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/followTopGuideline"
            app:layout_constraintEnd_toEndOf="@id/cardEndGuideline"
            app:layout_constraintStart_toStartOf="@id/cardStartGuideline"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/followerText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="팔로워\n0"
            app:layout_constraintBottom_toTopOf="@+id/followBottomGuideline"
            app:layout_constraintEnd_toStartOf="@+id/genderText"
            app:layout_constraintStart_toStartOf="@id/cardStartGuideline"
            app:layout_constraintTop_toTopOf="@id/followTopGuideline"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/follow_button"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/folloingText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="팔로잉\n0"
            app:layout_constraintBottom_toTopOf="@+id/followBottomGuideline"
            app:layout_constraintEnd_toStartOf="@+id/cardEndGuideline"
            app:layout_constraintStart_toEndOf="@id/genderText"
            app:layout_constraintTop_toTopOf="@id/followTopGuideline"
            app:layout_constraintVertical_chainStyle="packed"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/follow_button"
            android:textColor="@color/white"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/idTopGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            app:layout_constraintGuide_begin="330dp"

            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/idBottomGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="50dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/idTopGuideline"
            app:layout_constraintStart_toStartOf="@id/cardStartGuideline"
            app:layout_constraintEnd_toEndOf="@id/cardEndGuideline"
            app:layout_constraintBottom_toBottomOf="@id/idBottomGuideline"
            android:text="UserID : 0100000001"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/follow_button"
            android:textColor="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>